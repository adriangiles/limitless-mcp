{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    // Removed "types" to allow automatic type inclusion for all dependencies
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "dist"]
}
